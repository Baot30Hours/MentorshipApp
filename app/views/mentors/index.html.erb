<p id="notice"><%= notice %></p>

<h1>Mentors</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Email</th>
      <th scope="col">Name</th>
      <th scope="col">Date created</th>
      <th scope="col">Job title</th>
      <th scope="col">Expertise</th>
      <th scope="col">Mentee slots</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mentors.each do |mentor| %>
      <tr>
        <td><%= mentor.email %></td>
        <td><%= mentor.name %></td>
        <td><%= mentor.date_created %></td>
        <td><%= mentor.job_title %></td>
        <td><%= mentor.expertise %></td>
        <td><%= mentor.mentee_slots %></td>
        <td><%= link_to 'Show', mentor %></td>
        <td><%= link_to 'Edit', edit_mentor_path(mentor) %></td>
        <td><%= link_to 'Destroy', mentor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

