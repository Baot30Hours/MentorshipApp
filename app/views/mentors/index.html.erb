<p id="notice"><%= notice %></p>

<h1>Mentors</h1>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Job title</th>
        <th scope="col">Expertise</th>
        <th scope="col">Mentee slots</th>
        <th scope="col"></th>
      </tr>
    </thead>

    <tbody>
      <% @mentors.each do |mentor| %>
        <tr>
          <td><%= mentor.name %></td>
          <td><%= mentor.email %></td>
          <td><%= mentor.job_title %></td>
          <td><%= mentor.expertise %></td>
          <td><%= mentor.mentee_slots %></td>
          <td><%= link_to 'Show', mentor, :class => 'btn btn-default', :role => 'button' %>
              <%= link_to 'Edit', edit_mentor_path(mentor), :class => 'btn btn-default', :role => 'button' %>
              <%= link_to 'Destroy', mentor, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default', :role => 'button' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>


