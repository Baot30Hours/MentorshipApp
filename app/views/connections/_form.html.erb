<%= form_with(model: connection, local: true) do |form| %>
  <% if connection.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(connection.errors.count, "error") %> prohibited this connection from being saved:</h2>

      <ul>
      <% connection.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @mentor.present?%>
    <h1> for <%= @mentor.name %> </h1>
  <% end %>
  <% if @mentee.present?%>
    <h1> for <%= @mentee.name %> </h1>
  <% end %>

  <% if @connection.persisted? %>
    <div class="field">
      <%= form.label :status %>
      <%= form.select :status, Connection.statuses.keys%>
      <!--%= form.number_field :status, id: :connection_status %-->
    </div>
  <% end %>

  <div class="field">
    <% if @mentee.present? %>
      <%= form.hidden_field :mentee_id, :value => @mentee.id %>
    <% else %>
      <%= form.label :mentee_id %>
      <%= form.collection_select :mentee_id, Mentee.all, :id, :name, :include_blank => true %>
    <% end %>
  </div>

  <div class="field">
    <% if @mentor.present? %>
      <%= form.hidden_field :mentor_id, :value => @mentor.id %>
    <% else %>
      <%= form.label :mentor_id %>
      <%= form.collection_select :mentor_id, Mentor.all, :id, :name, :include_blank => true %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>