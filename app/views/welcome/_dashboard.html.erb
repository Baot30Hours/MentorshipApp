<div class="container">
	<div>
		<h1 class="page_header">Welcome to Baot, Natasha!</h1>
		<p>This is where you can see recent activity in the app</p>
	</div>
	<div id="dashboard-table-header">
		<span><h2 class="inline-header">Recently Joined</h2></span>
		<span><%= link_to "New Mentee", new_mentee_path, :class => 'btn btn-lg pull-right', :role => 'button'  %></span>
		<span><%= link_to "New Mentor", new_mentor_path, :class => 'btn btn-lg pull-right', :role => 'button'  %></span>
	</div>
		<table class="table">
			<thead>
      			<tr>
			        <th scope="col">Name</th>
			        <th scope="col">Type</th>
			        <th scope="col">Company</th>
			        <th scope="col">Title</th>
			        <th scope="col">connections</th>
			        <th scope="col"></th>
      			</tr>
   			</thead>
   			<tbody>
   				<% @combined.each do |record| %>
   				<tr>
   					<td><%= link_to record.name, record, :class => "link_text" %> </td>
   					<td><% if record.is_a?(Mentor) %>
   							Mentor
   						<% else %>
   							Mentee
   						<% end %>
   					</td>
   					<td><%= record.company %></td>
   					<td><%= record.job_title %></td>
   					<td><% record.connections.each do |connection| %>
   							<% if record.is_a?(Mentor) %>
   								<%= link_to connection.mentee.name, connection, :class => "link_text" %>
   							<% else %>
   								<%= link_to connection.mentor.name, connection, :class => "link_text" %>
   							<% end %>
   						<% end %>
   					</td>
   					<td><%= link_to 'Connect', new_connection_path, :class => 'btn btn-default', :role => 'button' %></td>
   				</tr>	
   				<% end %>
   			</tbody>
		</table>
	
	
</div>



