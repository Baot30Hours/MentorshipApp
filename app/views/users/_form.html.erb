<%= form_with model: @user, local: true do |form| %>
 
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited
        this user from being saved:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :name, class: "form-label" %><br>
    <%= form.text_field :userName, class: 'form-control' %>
  </p>
 
  <p>
    <%= form.label :email, class: "form-label" %><br>
    <%= form.text_field :email, class: 'form-control' %>
  </p>

  <p>
    <%= form.label :password, class: "form-label" %><br>
    <%= form.password_field  :password, class: 'form-control' %>
  </p>

  <p>
    <%= form.label :confirmation, class: "form-label" %><br>
    <%= form.password_field  :password_confirmation, class: 'form-control' %>
  </p>
 
  <p class="actions">
    <%= form.submit "Sign up", {class: "btn btn-primary btn-lg"}%>
  </p>
 
<% end %>
