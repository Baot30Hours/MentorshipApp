<p id="notice"><%= notice %></p>

<h1>Mentees</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Email</th>
      <th scope="col">Name</th>
      <th scope="col">Date created</th>
      <th scope="col">Job title</th>
      <th scope="col">Expertise</th>
      <th scope="col">Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mentees.each do |mentee| %>
      <tr>
        <td><%= mentee.email %></td>
        <td><%= mentee.name %></td>
        <td><%= mentee.date_created %></td>
        <td><%= mentee.job_title %></td>
        <td><%= mentee.expertise %></td>
        <td><%= mentee.notes %></td>
        <td><%= link_to 'Show', mentee %></td>
        <td><%= link_to 'Edit', edit_mentee_path(mentee) %></td>
        <td><%= link_to 'Destroy', mentee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

