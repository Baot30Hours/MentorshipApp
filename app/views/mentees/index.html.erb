<h1>Listing mentees</h1>

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newMenteeModal">
  New Mentee
</button>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Date Created</th>
    <th>Job Title</th>
    <th>Expertise</th>
    <th>Notes</th>
  </tr>
 
  <% @mentees.each do |mentee| %>
    <tr>
      <td><%= mentee.name %></td>
      <td><%= mentee.email %></td>
      <td><%= mentee.date_created %></td>
      <td><%= mentee.job_title %></td>
      <td><%= mentee.expertise %></td>
      <td><%= mentee.notes %></td>
      
      <td><%= link_to 'Show', mentee_path(mentee) %></td>
      <td><%= link_to 'Edit', edit_mentee_path(mentee) %></td>
      <td><%= link_to 'Destroy', mentee_path(mentee),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>


<div class="modal" id="newMenteeModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h1 class="modal-title">New Mentee</h1>
      </div>

      <div class="modal-body">    
        <%= form_for Mentee.new, :html => { :id => 'newMenteeForm' } do |form| %>
          <p>
            <%= form.label :name %><br>
            <%= form.text_field :name %>
          </p>
         
          <p>
            <%= form.label :email %><br>
            <%= form.text_field :email %>
          </p>
        
          <p>
            <%= form.label :date_created %><br>
            <%= form.date_field :date_created %>
          </p>
        
          <p>
            <%= form.label :job_title %><br>
            <%= form.text_field :job_title %>
          </p>
        
          <p>
            <%= form.label :expertise %><br>
            <%= form.text_area :expertise %>
          </p>
        
          <p>
            <%= form.label :notes %><br>
            <%= form.text_area :notes %>
          </p>

          <div class="modal-footer">
              <button id="submitNewMentee" type="button" class="btn btn-primary" >Save changes</button>
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>