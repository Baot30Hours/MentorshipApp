<h1>Listing events</h1>

<%= link_to '+', new_event_path %> 
<br><br>

<% @events.each do |event| %>
    <%= event.date.strftime("%F") %>
    <br>
    <%= event.event_type %>
    <br>
    <%= event.method %>
    <br>
    <%= event.notes %>
    <br>
    &ensp;<%= link_to 'Destroy', event_path(event),
    method: :delete,
    data: { confirm: 'Are you sure?' } %>
    <%= link_to 'Edit', edit_event_path(event)%>
    <br><br>
<% end %>

